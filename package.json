{
    "name": "backend",
    "version": "1.0.0",
    "description": "Sned BE",
    "main": "index.ts",
    "type": "module",
    "scripts": {
        "dev": "nodemon -r tsconfig-paths/register ./dist/index.js",
        "build": "rimraf ./dist && tsup ./src/index.ts --format esm",
        "start": "node ./dist/index.js",
        "seed:config": "TYPEORM_SEEDING_SEEDS=src/seeds/**/*{.ts,.js} ts-node ./node_modules/typeorm-seeding/dist/cli.js config",
        "seed:run": "TYPEORM_SEEDING_SEEDS=src/seeds/**/*{.ts,.js} ts-node ./node_modules/typeorm-seeding/dist/cli.js seed",
        "schema:drop": "ts-node ./node_modules/typeorm/cli.js schema:drop",
        "schema:sync": "ts-node ./node_modules/typeorm/cli.js schema:sync",
        "lint": "eslint",
        "lint:fix": "eslint --fix",
        "format": "prettier --config .prettierrc --write ."
    },
    "dependencies": {
        "@types/jsonwebtoken": "^9.0.6",
        "@wagmi/core": "^2.13.6",
        "abitype": "^1.0.6",
        "body-parser": "^1.20.2",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "express-rate-limit": "^7.2.0",
        "helmet": "^7.1.0",
        "jsonwebtoken": "^9.0.2",
        "module-alias": "^2.2.3",
        "nanoid": "^3.3.7",
        "pg": "^8.11.4",
        "pino": "^9.2.0",
        "reflect-metadata": "^0.2.2",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.1",
        "typeorm": "^0.3.20",
        "typeorm-seeding": "^1.6.1",
        "uuid": "^9.0.1",
        "viem": "^2.10.3"
    },
    "devDependencies": {
        "@swc/core": "^1.7.26",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/node": "^22.2.0",
        "@types/uuid": "^9.0.8",
        "@typescript-eslint/eslint-plugin": "^7.3.1",
        "@typescript-eslint/parser": "^7.3.1",
        "cors": "^2.8.5",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.3",
        "nodemon": "^3.1.0",
        "prettier": "^3.2.5",
        "rimraf": "^5.0.5",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "tsup": "^8.3.0",
        "typescript": "^5.4.3"
    },
    "_moduleAliases": {
        "@": "dist"
    },
    "author": "Sned team",
    "repository": "",
    "license": "ISC"
}